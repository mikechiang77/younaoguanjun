/* 用户信息弹窗样式 */
.user-info-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.user-info-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-info-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.user-info-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.info-item {
  margin-bottom: 30rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  padding: 20rpx;
  border: 1px dashed #ccc;
  border-radius: 8rpx;
}

.avatar-btn::after {
  border: none;
}

.avatar-img {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.avatar-text {
  font-size: 24rpx;
  color: #666;
}

.nickname-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
}

.nickname-input {
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.nickname-preview {
  font-size: 24rpx;
  color: #07c160;
  padding: 8rpx 0;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-5rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.nickname-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  margin-bottom: 16rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cancel-btn, .confirm-btn {
  width: 45%;
  font-size: 30rpx;
  padding: 16rpx 0;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #07c160;
  color: white;
}

/* 用户信息显示区域样式（可选） */
.user-profile {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-nickname {
  font-size: 24rpx;
  color: #333;
  margin-top: 10rpx;
  max-width: 120rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}